<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlx.dao.ItemsDao">

    <resultMap id="customerMap" type="com.zlx.domain.Customer">
        <id column="ACCOUNT" property="account"/>
        <result column="PASSWORD" property="password"/>
        <result column="CNAME" property="cname"/>
    </resultMap>
    <select id="getCustomerByAccount" resultType="Customer"  resultMap="customerMap">
        SELECT * FROM t_customer  Where ACCOUNT = #{account} AND PASSWORD = #{password}
    </select>

    <!--<select id="findById" parameterType="int" resultType="items">
        select * from items where id = #{id}
    </select>-->
</mapper>